{
    "name": "@nivoda/design-tokens",
    "version": "0.1.0",
    "description": "",
    "type": "module",
    "license": "ISC",
    "files": [
        "dist"
    ],
    "main": "dist/tokens/js/index.js",
    "types": "dist/tokens/js/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "default": "./dist/tokens/js/index.js",
                "types": "./dist/tokens/js/index.d.ts"
            }
        },
        "./package.json": "./package.json",
        "./tokens/*": "./dist/tokens/*"
    },
    "scripts": {
        "build": "pnpm build:clean && tsx ./config.ts",
        "build:clean": "rm -rf ./dist",
        "lint": "eslint . --max-warnings=0",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "prepublishOnly": "pnpm build",
        "dev": "pnpm build && chokidar \"tokens/**/*.json\" -c \"pnpm build\""
    },
    "devDependencies": {
        "@nivoda/typescript-config": "workspace:*",
        "chokidar-cli": "^3.0.0",
        "prettier": "^3.2.5",
        "style-dictionary": "^4.0.1",
        "style-dictionary-utils": "^3.1.1",
        "tsx": "^4.17.0"
    }
}
